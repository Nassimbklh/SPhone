<svg width="400" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="watchGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4338ca;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Watch band top -->
  <rect x="150" y="50" width="100" height="70" rx="10" fill="#374151"/>

  <!-- Watch face -->
  <rect x="120" y="120" width="160" height="160" rx="35" fill="url(#watchGradient)" stroke="#1e293b" stroke-width="4"/>

  <!-- Screen -->
  <rect x="135" y="135" width="130" height="130" rx="25" fill="#0f172a"/>

  <!-- Watch band bottom -->
  <rect x="150" y="280" width="100" height="70" rx="10" fill="#374151"/>

  <!-- Time display -->
  <text x="200" y="205" font-family="Arial, sans-serif" font-size="32" fill="#3b82f6" text-anchor="middle" font-weight="bold">10:30</text>
</svg>
